{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "OPC": "Debug"
    }
  },
  "AllowedHosts": "*",
  "OpcConfigPath": "opc_config.json",
  "OpcSettings": {
    "DefaultReconnectInterval": 5000,
    "DefaultSamplingInterval": 1000,
    "MaxTagsPerSubscription": 1000,
    "EnableAutoReconnect": true,
    "EnableDataForwarding": true
  },
  "DataForwardSettings": {
    "DefaultBatchSize": 100,
    "DefaultBatchIntervalMs": 1000,
    "MaxRetryCount": 3,
    "RetryDelayMs": 1000
  }
}